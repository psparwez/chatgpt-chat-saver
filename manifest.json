{
    "manifest_version": 3,
    "name": "ChatGPT Saved Chats",
    "version": "1.0",
    "description": "Save your favorite chats in ChatGPT.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage"],
    "host_permissions": ["https://chat.openai.com/*"],
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }
  